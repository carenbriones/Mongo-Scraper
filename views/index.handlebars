<div class="container-fluid">
  <div class="jumbotron">
    <h1 class="display-4">Mongoose Scraper</h1>
    <p class="lead">C|Net Edition</p>
    <hr class="my-4">
    <button type="button" class="btn btn-primary">Scrape New Articles</button>
<button type="button" class="btn btn-secondary">Clear Articles</button>
  </div>

    {{#each articles}}
      {{#unless this.saved}}
        <div class="card mb-3">
          <div class="card-header">
            <h3><a href="{{this.link}}">{{this.title}}</a></h3>
            <button type="button" class="btn btn-primary save-btn" role="button" data-id={{this._id}}>Save Article</button>
          </div>
          <div class="card-body">
            {{this.summary}}
          </div>
        </div>
      {{/unless}}
    {{/each}}
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/index.js"></script>